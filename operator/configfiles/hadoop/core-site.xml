<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
                <name>fs.defaultFS</name>
                <value>hdfs://hadoop01:9000</value>
		<description>指定hdfs文件系统的名称</description>
        </property>
        <property>
                <name>hadoop.tmp.dir</name>
                <value>/home/jxufe/hadoopdata/tmp</value>
		<description>配置Hadoop运行产生的临时数据存储目录（一定要配置在有限权的目录下）</description>
        </property>
	<property>
                <name>io.file.buffer.size</name>
                <value>4096</value>	
		<description>配置操作HDFS的缓存大小</description>
        </property>
</configuration>
